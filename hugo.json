      "dateform": "Jan 2, 2006",
      "dateformShort": "Jan 2",
      "dateformNum": "2006-01-02",
      "dateformNumTime": "2006-01-02 15:04",
      
      "portrait": {
        "path": "/img/avatar.svg",
        "alt": "Portrait",
        "maxWidth": "100px"
      },

      "social": [
        {
          "name": "email",
          "url": "mailto:c3ps@proton.me"
        },
        {
          "name": "github",
          "url": "https://github.com/x3ps"
        },
        {
          "name": "matrix",
          "url": "https://matrix.to/#/@x3ps:matrix.org"
        }
      ],
      "author": {
        "name": "x3ps"
      },
      "favicon": {
        "color": {
          "mask": "#1b1c1d",
          "msapplication": "#1b1c1d",
          "theme": "#1b1c1d"
        }
      },
      "footer": {
        "author": true,
        "copyright": true,
        "rss": true,
        "bottomText": [
          "Made with <a href=\"https://gohugo.io\">Hugo</a> & <a href=\"https://github.com/rhazdon/hugo-theme-hello-friend-ng\">Hello Friend NG</a>."
        ]
      },
      "logo": {
        "logoHomeLink": "/",
        "logoMark": ">",
        "logoText": "/home/x3ps"
      }
    },
    "menu": {
      "main": [
        {
          "identifier": "about",
          "name": "Обо мне",
          "url": "/about/"
