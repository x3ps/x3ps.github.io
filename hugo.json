{
    "baseURL": "https://x3ps.github.io",
    "title": "x3ps",
    "languageCode": "ru-ru",
    "theme": "hello-friend-ng",

    "PygmentsCodeFences": true,
    "PygmentsStyle": "monokai",

    "copyright": "2025",

    "archetypeDir": "archetypes",
    "contentDir": "content",
    "dataDir": "data",
    "layoutDir": "layouts",
    "publishDir": "public",

    "buildDrafts": false,
    "buildFuture": false,
    "buildExpired": false,
    "canonifyURLs": true,

    "enableRobotsTXT": true,
